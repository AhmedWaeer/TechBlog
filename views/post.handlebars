
<div class="w-full px-4 shadow">
    <div class="flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
        <div class="px-4 py-10 flex-auto mt-14 sm:mt-0">
                <input type="hidden" name="post-id" value="{{post.id}}" />
           
                      <div class=""card border w-96 hover:shadow-none relative flex flex-col shadow-lg m-5">
<img class="w-28 mb-5 h-28 p-1 bg-white rounded-full" src="https://api-private.atlassian.com/users/8f525203adb5093c5954b43a5b6420c2/avatar" alt="" />

            </div>
            <a href="">
                <h6 class="text-xl font-semibold">{{post.title}}</h6>
            </a>
            <p class="mt-2 mb-4 text-gray-600">
                {{post.body}}
            </p>
        </div>
    </div>
</div>

   {{#each post.comments as |comment|}}
<div class="w-full px-4">
    <div class="flex flex-col min-w-0 px-4 py-10 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
      {{#unless comment.createdBy}}
  <a href=""> 
            <h6 class="text-xl font-semibold">Unknown User<span class="text-xs"> on {{format_Date comment.date}}</span></h6>
        </a>
{{/unless}}  
   {{#if comment.createdBy}}
        <a href=""> 
            <h6 class="text-xl font-semibold">{{comment.createdBy.username}} <span class="text-xs">    on    {{format_Date comment.date}}</span></h6>
        </a>
        {{/if}}  
        <p class="mt-2 mb-4 text-gray-600">{{comment.body}}
        </p>
    </div>
</div>
 {{/each}}




<div class="flex flex-wrap justify-center">
    <div class="w-full lg:w-6/12 px-4">
        <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300">
            <div class="flex-auto p-5 mt-5">
                <div class="relative w-full mb-3">
                </div>
                <form id="comment-form">
                <div class="relative w-full mb-3">
                    <label class="block uppercase text-gray-700 text-xs font-bold mb-2">Comment</label
                    ><textarea
                      rows="4"
                      cols="80"
                      class="border-0 px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full"
                  id="comment"
                    ></textarea>
                  </div>
                  <div class="text-center mt-6">
                    <button
                      class="bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1"
                      type="submit"

                    >
                      Submit
                    </button>
                  </div>
                </div>
                </form>
              </div>
            </div>
          </div>

  <script src="/js/comment.js"></script>
